<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<g:HTMLPanel styleName="layout" width="100%" height="100%">
		  <g:Grid width="100%" height="100%" styleName="layout">
	    	<g:row>
	    		<g:customCell>
	    			<g:Label text="AULA" styleName="tituloFormulario" height="31px"/>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Label text="Ficha de Aula:" width="100%" styleName="labelsubformulario" height="20px"/>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" cellPadding="6" styleName="layout">
	    				<g:row>
							<g:customCell>
								<g:Label text="Colegio" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="144px" ui:field="colegioTexbox" maxLength="80" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Periodo" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="100px" ui:field="periTexbox" />
							</g:customCell>
							<g:customCell>
								<g:Label text="Ciclo" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="100px" ui:field="cicloTexbox" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Grado" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="100px" ui:field="gradoTexbox" />
							</g:customCell>
							<g:customCell>
								<g:Label text="Sección" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="100px" ui:field="secTexbox" />
							</g:customCell>
						</g:row>		
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid cellPadding="8" height="25px" styleName="layoutarriba" width="100%">
	    				<g:row>
	    					<g:customCell>
	    						<g:Button styleName="layout">Modificar</g:Button>
	    					</g:customCell>
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Label text="Seleccione que tipo de información desea mostrar:" width="100%" styleName="labelsubformulario" height="20px"/>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" cellPadding="6" height="80px" styleName="layoutarriba">
	    				<g:row>
	    					<g:customCell>
	    						<g:CheckBox text="Alumnos"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:CheckBox text="Profesores"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:CheckBox text="Psicologos"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:CheckBox text="Cursos"/>
	    					</g:customCell>
	    				</g:row>
						
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" height="87px">
	    				<g:row>
	    					<g:customCell>
	    						<g:ScrollPanel width="100%" height="112px">
	    							<p1:CellTable width="100%" height="100%" ui:field="cellTable"/>
	    						</g:ScrollPanel>
	    					</g:customCell>
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" height="25px" styleName="layoutarriba" cellPadding="8">
	    				<g:row>
	    					<g:customCell>
	    						<g:Button width="90px" text="Limpiar" styleName="layout"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:Button styleName="layout" width="100px">Mostar</g:Button>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:Button width="100px" text="Ingresar" styleName="layout"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:Button width="100px" text="Cancelar" styleName="layout"/>
	    					</g:customCell>
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>

	    </g:Grid>
	</g:HTMLPanel>
</ui:UiBinder>
