<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<g:HTMLPanel height="100%" width="100%" styleName="fondoBienvenida">
	    <g:Grid width="100%" height="100%" styleName="cuadroBorde">
	    <g:row>
	    		<g:customCell>
	    			<g:Label text="Nuevo Rol Profesor" styleName="tituloFormulario" horizontalAlignment="ALIGN_CENTER"/>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Label text="Ficha de Usuario:" width="100%" styleName="labelsubformulario" height="37px"/>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" cellPadding="6" styleName="layout">
	    				<g:row>
	    					<g:customCell>
	    			<g:Label text="DNI" styleName="labelFormulario"/>
	    		</g:customCell>
	    					<g:customCell>
	    						<g:IntegerBox width="120px" ui:field="dniTexbox" enabled="false"/>
	    					</g:customCell>
	    				</g:row>
	    				<g:row>
	    					<g:customCell>
	    						<g:Label text="Nombres" styleName="labelFormulario"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:TextBox width="200px" ui:field="nombresTexbox" enabled="false"/>
	    					</g:customCell>
	    				</g:row>
	    				<g:row>
	    					<g:customCell>
	    						<g:Label text="Apellidos" styleName="labelFormulario"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:TextBox width="200px" ui:field="apellidosTexbox" enabled="false"/>
	    					</g:customCell>
	    				</g:row>
	    				
	    				<g:row>
	    					<g:customCell>
	    						<g:Label styleName="labelFormulario" width="" text="Usuario"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:TextBox width="200px" ui:field="usuarioTexbox" enabled="false"/>
	    					</g:customCell>
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Label height="20px" styleName="labelsubformulario" text="Es necesario asignarle uno o mÃ¡s cursos al profesor:" width="100%"/>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" height="100%">
	    				<g:row>
	    					<g:customCell>
	    						<g:Grid width="100%" styleName="layout">
	    							<g:row>
	    								<g:customCell>
	    									<g:Label text="Curso" width="154px" styleName="labelFormulario"/>
	    								</g:customCell>
	    								<g:customCell>
	    									<g:TextBox width="200px"/>
	    								</g:customCell>
	    								<g:customCell>
	    									<g:Button  width="80px" text="Buscar" styleName="layout" ui:field="buscarButton"/>
	    								</g:customCell>
	    								<g:customCell>
	    									<g:Button styleName="layout" width="80px">Limpiar</g:Button>
	    								</g:customCell>
	    								<g:customCell>
	    									<g:Button styleName="layout">Borrar Todo</g:Button>
	    								</g:customCell>
	    							</g:row>
	    						</g:Grid>
	    					</g:customCell>
	    				</g:row>
	    				<g:row>
	    					<g:customCell>
	    						<g:Grid width="100%" styleName="layout">
	    							<g:row>
	    								<g:customCell>
	    									<g:ScrollPanel width="393px" height="90px">
	    				<p1:CellTable width="100%" height="133px" ui:field="cellTable"/>
	    			</g:ScrollPanel>
	    								</g:customCell>
	    								<g:customCell>
	    									<g:TextArea height="76px" width="254px"/>
	    								</g:customCell>
	    							</g:row>
	    						</g:Grid>
	    					</g:customCell>
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Label height="20px" styleName="labelsubformulario" text="Puede completar los siguientes campos ahora o realizarlo luego:" width="100%"/>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" height="100%" styleName="layout">
	    				<g:row>
	    					<g:customCell>
	    						<g:CheckBox text="Descripcion" width="" styleName="labelFormulario"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:TextArea width="331px" ui:field="txtadescripcion"/>
	    					</g:customCell>
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" height="100%" styleName="layoutarriba" cellPadding="10">
	    				<g:row>
	    					<g:customCell>
	    						<g:Button width="90px" text="Crear y salir" styleName="layout" ui:field="crearButton"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:Button width="180px" text="Crear y asignar otro rol" styleName="layout" ui:field="asignarButton"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:Button width="100px" text="Cancelar" styleName="layout"/>
	    					</g:customCell>
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    </g:Grid>
	</g:HTMLPanel>
</ui:UiBinder>
