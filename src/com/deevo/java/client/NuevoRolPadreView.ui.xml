<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel height="100%" width="100%" styleName="fondoBienvenida">
	<g:Grid width="100%" height="" cellPadding="6">
	    <g:row>
	    		<g:customCell>
	    			<g:Label text="Nuevo Rol Padre de Familia" styleName="tituloFormulario" horizontalAlignment="ALIGN_CENTER" height="30px"/>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Label text="Ficha de Usuario:" width="100%" styleName="labelsubformulario" height="20px"/>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" cellPadding="6">
	    				<g:row>
	    					<g:customCell>
	    			<g:Label text="DNI" styleName="labelFormulario" width="198"/>
	    		</g:customCell>
	    					<g:customCell>
	    						<g:TextBox width="120px" ui:field="dniTexbox" enabled="false"/>
	    					</g:customCell>
	    				</g:row>
	    				<g:row>
	    					<g:customCell>
	    						<g:Label text="Nombres" styleName="labelFormulario" width="198"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:TextBox width="200px" ui:field="nombresTexbox" enabled="false"/>
	    					</g:customCell>
	    				</g:row>
	    				<g:row>
	    					<g:customCell>
	    						<g:Label text="Apellidos" styleName="labelFormulario" width="198"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:TextBox width="200px" ui:field="apellidosTexbox" enabled="false"/>
	    					</g:customCell>
	    				</g:row>
	    				
	    				<g:row>
	    					<g:customCell>
	    						<g:Label styleName="labelFormulario" width="198" text="ID Usuario"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:TextBox width="200px" ui:field="usuarioTexbox" enabled="false"/>
	    					</g:customCell>
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Label height="20px" styleName="labelsubformulario" text="Puede completar los siguientes campos ahora o realizarlo luego:" width="100%"/>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" height="100%" cellPadding="6">
	    				<g:row>
	    					<g:customCell>
	    						<g:CheckBox text="Num. de hijos a registrar" width="151px" styleName="labelFormulario"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:IntegerBox width="200px" direction="LTR"/>
	    					</g:customCell>
	    				</g:row>
	    				<g:row>
	    					<g:customCell>
	    						<g:CheckBox text="Asignar hijos:" width="151px" styleName="labelFormulario"/>
	    					</g:customCell>
	    				</g:row>
	    				<g:row>
	    					<g:customCell>
	    						<g:Label text="DNI HIJO 1" styleName="labelFormulario" width=""/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:IntegerBox/>
	    					</g:customCell>
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" height="100%" cellPadding="6">
	    				<g:row>
	    					<g:customCell>
	    						<g:CheckBox name="new name" text="Padre/Madre" styleName="labelFormulario"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:ListBox width="120px" ui:field="bioListbox">
									<g:item value='1'>
										Si
									</g:item>
									<g:item value='2'>
										No
									</g:item>
								</g:ListBox>
	    					</g:customCell>
	    					
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    	<g:row/>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" height="100%" styleName="layoutarriba" cellPadding="6">
	    				<g:row>
	    					<g:customCell>
	    						<g:Button width="111px" text="Buscar Usuario" styleName="layout" ui:field="buscarButton"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:Button width="110px" styleName="layout" text="Aceptar" ui:field="crearButton"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:Button ui:field="crearehijoButton" text="Aceptar / Nuevo Alumno" width="165px" styleName="layout">Crear e ingresar hijo al sistema</g:Button>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:Button ui:field="cancelarButton" width="90px" text="Cancelar" styleName="layout"/>
	    					</g:customCell>
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    </g:Grid>
	</g:HTMLPanel>
</ui:UiBinder>
