<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel styleName="fondoBienvenida" width="100%" height="100%">
		<g:Grid width="100%" styleName="layout" height="">
			<g:row>
				<g:customCell>
					<g:Label text="Nueva Sección" styleName="tituloFormulario"
						horizontalAlignment="ALIGN_CENTER" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label
						text="Complete el siguiente formulario para ingresar una nueva sección en el sistema:"
						width="100%" styleName="labelsubformulario" height="37px" />
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Grid width="100%" cellPadding="6" >
						<g:row>
							<g:customCell>
								<g:Label text="Descripción*" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:IntegerBox width="120px" ui:field="seccionTexbox" maxLength="40" visibleLength="40" />
							</g:customCell>
							<g:customCell>
								<g:Label width="50px" height="28" ui:field="labelvalida"/>
							</g:customCell>
						</g:row>						
					</g:Grid>
				</g:customCell>
			</g:row>
			<g:row/>
			<g:row>
				<g:customCell>
					<g:Grid width="100%" height="100%" styleName="layoutarriba"
						cellPadding="10">
						<g:row>
							<g:customCell>
								<g:Button width="90px" text="Limpiar" styleName="layout" />
							</g:customCell>
							<g:customCell>
								<g:Button width="100px" text="Ingresar" styleName="layout"
									ui:field="ingresarButton" />
							</g:customCell>
							<g:customCell>
								<g:Button width="100px" text="Cancelar" styleName="layout" />
							</g:customCell>
						</g:row>
					</g:Grid>
				</g:customCell>
			</g:row>
		</g:Grid>
	</g:HTMLPanel>
</ui:UiBinder>
