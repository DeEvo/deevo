<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<g:HTMLPanel styleName="layout" width="100%" height="400px">
		  <g:Grid width="100%" height="400px" styleName="layout">
	    	<g:row>
	    		<g:customCell>
	    			<g:Label text="Buscar Alumno" styleName="tituloFormulario" height="31px"/>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Label text="Busqueda de alumnos:" width="100%" styleName="labelsubformulario" height="20px"/>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" cellPadding="6" height="80px">
	    				<g:row>
	    					<g:customCell>
	    			<g:Label text="Datos" styleName="labelFormulario"/>
	    		</g:customCell>
	    					<g:customCell>
	    						<g:IntegerBox width="150px"/>
	    					</g:customCell>
	    				</g:row>
	    				<g:row>
	    					<g:customCell>
	    						<g:Label text="Buscar por" styleName="labelFormulario"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:ListBox width="150px" selectedIndex="1"/>
	    					</g:customCell>
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Grid width="100%" height="25px" styleName="layoutarriba" cellPadding="8">
	    				<g:row>
	    					<g:customCell>
	    						<g:Button width="90px" text="Limpiar" styleName="layout"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:Button width="100px" text="Ingresar" styleName="layout"/>
	    					</g:customCell>
	    					<g:customCell>
	    						<g:Button width="100px" text="Cancelar" styleName="layout"/>
	    					</g:customCell>
	    				</g:row>
	    			</g:Grid>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<p1:DataGrid width="100%" height="200px" ui:field="dataGrid" autoHeaderRefreshDisabled="true" autoFooterRefreshDisabled="true"/>
	    		</g:customCell>
	    	</g:row>
	    </g:Grid>
	</g:HTMLPanel>
</ui:UiBinder>
