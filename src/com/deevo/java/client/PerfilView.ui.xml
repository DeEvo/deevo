<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel width="100%" styleName="fondoBienvenida" height="100%">
		<g:Grid width="100%" height="100%" styleName="cuadroBorde">
						<g:row>
							<g:customCell>
								<g:Label text="Perfil de Usuario" styleName="tituloFormulario"
						horizontalAlignment="ALIGN_CENTER" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Grid width="100%" height="100%">
									<g:row>
										<g:customCell>
											<g:Grid width="100%" height="100%" styleName="fondoperfilfoto">
												<g:row>
													<g:customCell>
														<g:Image width="100px" height="100px"/>
													</g:customCell>
												</g:row>
												<g:row>
													<g:customCell>
														<g:Button width="130px" text="Cambiar Foto" styleName="layout" height="30px"/>
													</g:customCell>
												</g:row>
												<g:row>
													<g:customCell>
														<g:Button text="Editar información" width="125px" styleName="layout"/>
													</g:customCell>
												</g:row>
												<g:row>
													<g:customCell>
														<g:Button text="Cambiar contraseña" width="136px" styleName="layout"/>
													</g:customCell>
												</g:row>
												<g:row>
													<g:customCell>
														<g:Button text="Detalle de Roles" styleName="layout">Detalle de Usuario</g:Button>
													</g:customCell>
												</g:row>
												<g:row/>
											</g:Grid>
										</g:customCell>
										<g:customCell>
											<g:Grid borderWidth="1" width="100%" height="100%">
												<g:row>
													<g:customCell>
														<g:Grid width="100%" height="100%">
														<g:row>
															<g:customCell>
															<g:Label text="Usuario" styleName="labelFormulario" width="100%" />
															</g:customCell>
															<g:customCell>
																<g:TextBox width="200px" ui:field="usuarioTexbox" maxLength="40" />
															</g:customCell>
														</g:row>
														</g:Grid>
													</g:customCell>
												</g:row>
												<g:row>
													<g:customCell>
											<g:Grid width="100%" height="100%">
											<g:row>
							<g:customCell>
								<g:Label text="DNI" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:IntegerBox width="120px" ui:field="dniTexbox" maxLength="8" visibleLength="8" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Nombres" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="200px" ui:field="nombresTexbox" maxLength="40" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Apellido Paterno" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="200px" ui:field="appaternTexbox" maxLength="40" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Apellido Materno" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="200px" ui:field="apmaternTexbox" maxLength="40" />
							</g:customCell>
						</g:row>
						
							<g:row>
							<g:customCell>
								<g:Label text="Genero" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="120px" ui:field="sexoTextbox"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Estado Civil" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="120px" ui:field="estcivTextbox"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Fecha de nacimiento" width="100%" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="120px" ui:field="fnacTexbox"/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Telefono" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:IntegerBox width="120px" ui:field="telfTexbox" maxLength="7" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Celular" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:IntegerBox width="120px" ui:field="celTexbox" maxLength="9" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Dirección" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="200px" ui:field="dirTexbox" maxLength="50" />
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Email" styleName="labelFormulario" />
							</g:customCell>
							<g:customCell>
								<g:TextBox width="200px" ui:field="emailTexbox" maxLength="30" />
							</g:customCell>
						</g:row>
													
											</g:Grid>
													</g:customCell>
												</g:row>
											</g:Grid>
										</g:customCell>
									</g:row>
								</g:Grid>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:VerticalPanel height="200px" width="100%"/>
							</g:customCell>
						</g:row>
					</g:Grid>
		</g:HTMLPanel>
</ui:UiBinder>
